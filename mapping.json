{
  "template": ["mysql-*"],
  "settings" : {
    "number_of_shards": 1
  },
  "mappings": {
    "processlist": {
      "properties": {
        "Date": {
          "type": "date"
        },
        "DatabaseHost": {"type": "keyword"},
        "Count": {"type": "integer"},
        "Processes": {
          "type": "nested",
          "properties": {
            "ID": {"type":  "keyword"},
            "User": {"type":  "keyword"},
            "Host": {"type":  "keyword"},
            "Database": {"type":  "keyword"},
            "Command": {"type": "text"},
            "State": {"type": "keyword"},
            "Info": {"type": "keyword"}
          }
        }
      }
    }
  }
}